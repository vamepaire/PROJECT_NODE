<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

<title>E-Commerce Front Page</title>
<script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100">
  <!-- Navigation Bar -->
  <nav class="bg-white shadow-md fixed top-0 w-full z-10">
    <div class="container mx-auto px-4 py-4 flex justify-between items-center">
      <!-- Logo -->
      <a href="/" class="text-2xl font-bold text-blue-600">ShopMate</a>

      <div class="hidden md:flex items-center space-x-6 -mr-10" id="menu">
        <!-- Customer Login/Sign Up -->
        <a href="/login" class="text-gray-700 hover:text-blue-600">
          <span class="mr-1">
            <img src="https://static-assets-web.flixcart.com/batman-returns/batman-returns/p/images/profile-52e0dc.svg" alt="Login Icon" class="w-5 h-5 inline-block" />
          </span>
          Login
        </a>



        <a href="/signup" class="text-gray-700 hover:text-blue-600">Sign Up</a>

        <!-- Business Login/Sign Up -->
        <a href="/business-login" class="text-gray-700 hover:text-blue-600">Business Login</a>
        <a href="/business-signup" class="text-gray-700 hover:text-blue-600">Business Sign Up</a>

        <!-- Cart -->
        <a href="/cart" class="flex items-center relative text-gray-700 hover:text-blue-600">
          <span class="absolute -top-1 -left-3 inline-block w-5 h-5 bg-red-500 text-white text-xs rounded-full flex items-center justify-center">
            <%= productData.length %>
          </span>
          <img src="https://static-assets-web.flixcart.com/batman-returns/batman-returns/p/images/header_cart-eed150.svg" alt="Cart Icon" class="w-6 h-6 mr-2">
          Cart
        </a>


      </div>
    </div>
  </nav>

  <section class="mt-16">
    <div class="bg-gray-900 text-white py-20">
      <div class="container mx-auto px-4 text-center">
        <h1 class="text-5xl font-bold mb-6">Welcome to ShopMate</h1>
        <p class="text-xl mb-6">Find the best products at unbeatable prices. Shop now and enjoy exclusive offers!</p>
        <a href="/shop" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-3 px-6 rounded-md transition duration-300">
          Start Shopping
        </a>
      </div>
    </div>

   <div class="py-16">
     <div class="container mx-auto px-4">
       <h2 class="text-3xl font-bold text-center mb-12">Featured Products</h2>
       <% if (productData.length > 0) { %>
       <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
         <% productData.forEach(function(product) { %>
         <div class="bg-white rounded-lg overflow-hidden transform transition-transform duration-300 hover:scale-105 hover:shadow-lg border border-solid border-gray-300">
           <a href="/read/<%= product._id %>">
             <img src="<%= product.image %>" alt="<%= product.name %>" class="w-full h-48 object-contain">
           </a>
          
           <div class="p-4">
             <a href="/read/<%= product._id %>" class="block">
               <h3 class="font-bold text-lg text-gray-800 hover:text-blue-500 transition-colors duration-300"><%= product.name %></h3>
             </a>
             <p class="text-gray-600">&#8377;<%= product.price.toFixed(2) %></p>
             <a class="text-blue-600" href="/read/<%= product._id %>">See More</a>
             <button class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded mt-4 w-full">Add to Cart</button>
           </div>
         </div>
         <% }); %>
         <!-- Closing forEach loop -->
       </div>
       <% } else { %>
       <p class="text-center text-gray-600">No products available at this time.</p>
       <% } %>
     </div>
   </div>



    <footer class="bg-gray-800 text-white py-8">
      <div class="container mx-auto text-center">
        <p>&copy; 2024 ShopMate. All rights reserved.</p>
      </div>
    </footer>
  </section>
</body>